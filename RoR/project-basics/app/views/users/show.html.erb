<div class="panel panel-primary container">
  <div class="panel-heading row">
    <h1>Showing user #<%= @user.id %></h1>
    <button type="button" class="btn btn-default pull-right"><%= link_to "all users", list_path %></button>
  </div>
  <div class="panel-body row user-detail">
    <div class="row col-sm-8">
      <div class="col-sm-3">
        <span class="glyphicon glyphicon-user"></span> #<%= @user.id %> <%= @user.name %>
      </div>
      <div class="col-sm-5">
        <%= image_tag @user.picture_url, alt:(@user.name + "'s picture") %>
      </div>
    </div>
    <div class="col-sm-4">
      <%= @user.description %>
    </div>
  </div>
</div>