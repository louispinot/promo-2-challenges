<div class="panel panel-primary container">
  <div class="panel-heading row">
    <h1>Creating a new user</h1>
    <button type="button" class="btn btn-default pull-right"><%= link_to "Home", root_path %></button>
  </div>
  <div class="panel-body row">
    <%= form_for @new_user, url: {action: "create"}, html: {role: "form"} do |form| %>

      <div class="form-group">
        <%= form.label :name, "Nom de l'utilisateur" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :picture_url, "URL de l'image" %>
        <%= form.text_field :picture_url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :description, "Description" %>
        <%= form.text_area :description, class: "form-control" %>
      </div>
      <%= form.submit "Create user", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>